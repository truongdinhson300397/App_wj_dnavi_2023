{{#extend "components/layout" title="ダイヤモンド就活ナビ：学生のための就職活動・採用・IS情報サイト"}}
  {{#content "header-scripts" mode="append"}}
    <link rel="stylesheet" href="{{path}}css/swiper.css" type="text/css" media="all"/>
    <link rel="stylesheet" href="{{path}}css/login.css" type="text/css" media="all"/>
    <link rel="stylesheet" href="{{path}}css/shared/general.css" type="text/css" media="all"/>
    <link rel="stylesheet" href="{{path}}css/CL0020/style.css" type="text/css" media="all"/>
    {{#if isApplican}} <link rel="stylesheet" href="{{path}}css/CL0020/_app.css"/> {{/if}}
    <style>
      .spare-box-horizontal {
        display: flex;
        flex-wrap: wrap;
      }

      .spare-box-horizontal > img {
        margin-right: 20px;
      }
      #ouen-image img, .banner-image img, .banner-image-2022 img {
        width: auto;
      }
      @media only screen and (max-width: 767px) {
        #enquete-image {
          text-align: center;
        }
        #ouen-image img {
          width: 100%;
        }
        .banner-image img, .banner-image-2022 img {
          width: 100%;
        }
      }
    </style>
  {{/content}}
  {{#content "main"}}
    <!--login-content-->
    {{#if isApplican}}
      {{> app/loginContent }}
      {{> app/smartCheckin }}
    {{/if}}

    <!--block infomation-->
    {{#unless isApplican}} {{> web/information }} {{/unless}}

    <!--block reserved events (logined)-->
    {{#if isApplican}}
      {{> app/reservedEvents }}
    {{else}}
      {{> web/reservedEvents }}
    {{/if}}

    <!-- スライド Carousel -->
    <div id="mainVis" class="swiper-container mainvis-box">
      <ul class="swiper-wrapper js-main-visual-ul">
        <!--generated by js-->
      </ul>
      <!-- <div class="swiper-pagination-mainvis"></div> -->
      <div class="swiper-button-prev swiper-button-mainvis"></div>
      <div class="swiper-button-next swiper-button-mainvis"></div>
    </div>

    <!--block information FOR APP-->
    {{#if isApplican}} {{> app/information }} {{/if}}

    <!-- live seminar -->
    {{#unless isApplican}} {{> web/liveSeminar }} {{/unless}}

    <!-- current events -->
    {{#unless isApplican}} {{> web/currentEvents }} {{/unless}}

    <!-- asura event -->
    {{#unless isApplican}} {{> web/asuraEvent }} {{/unless}}

    <!--    <div class="article-box"  id="ninkitop-image">-->
    <!--      <a href="/navi21/ninkitop">-->
    <!--        <img src="{{path}}img/bannar_280_kouki.jpg" alt="">-->
    <!--      </a>-->
    <!--    </div>-->
    <div class="contents-box">
      <div class="article-box"  id="ouen-image" style="display: none">
        <a href="{{linkOrWebview (concat domain 'navi21/ouen')}}">
          <img src="{{path}}img/banner_saiyo_ranking.jpg" alt="ouen">
        </a>
      </div>
    </div>

    <div class="banner-image-2022">
      <div id="ninkitop-2022-image">
        <a href="{{linkOrWebview 'https://shukatsu.jp/navi22/ninkitop/'}}">
          <img src="{{path}}img/banner_22_ninki_ranking_2.jpg" alt="ninki">
        </a>
      </div>
    </div>

    {{#if isApplican}} <a id="goEventList" href="{{link.eventList}}"><img src="{{path}}img/2022/app_top_event_banner.png" alt="list image" style="width: 100%"></a> {{/if}}

    <!-- find company FOR APP-->
    {{#if isApplican}} {{> app/findCompany }} {{/if}}

    <!-- pickup company -->
    <div id="pick-up" class="contents-box pickup-box">
      <article class="article-box">
        <header class="article-box-header">
          <h2 class="article-box-header-h2">
            <span class="article-box-header-h2-jp">ピックアップ企業</span><br/>
            <span class="article-box-header-h2-eng">PICK UP</span>
          </h2>
        </header>
        <!-- <div class="grd-year-tabs">
          <a href="#" class="grd-year-tab btn-blue">2021年卒向け</a>
          <a href="#" class="grd-year-tab">2022年卒向け</a>
        </div> -->
        <ul class="pickup-ul js-pickup-ul">
          <!--generated by js-->
        </ul>
      </article>
    </div>

    <!-- block disclosure -->
    {{#unless isApplican}} {{> web/disclosure }} {{/unless}}

    <!--      <div class="contents-box">-->
    <!--        <div class="article-box banner-image" style="display: none">-->
    <!--          <a class="send_api_button" href="javascript:void(0);">-->
    <!--            <img src="{{path}}img/banner_post_sokatsu.jpg" alt="">-->
    <!--          </a>-->
    <!--          <form action="https://monitor.saiyou-ryoku.jp/" method="post" id="send_api_form">-->
    <!--            &lt;!&ndash;Generated by js&ndash;&gt;-->
    <!--          </form>-->
    <!--        </div>-->
    <!--      </div>-->

    <!--     remove banner 2022-->
    <div class="contents-box article-box banner-image-2022" id="enquete-image">
        <a href="{{linkOrWebview (concat domain '2022/diamond_enquete')}}">
            <img src="{{path}}img/dnavi_22_monitor_mar.jpg.jpg" alt="">
        </a>
    </div>

    <!-- banner -->
    {{#if isApplican}}
      {{> app/banner }}
    {{else}}
      {{> web/banner }}
    {{/if}}

    <!-- company image -->
    {{#unless isApplican}} {{> web/companyImages }} {{/unless}}

    <div class="contents-box">
      <!-- find company -->
      {{#unless isApplican}} {{> web/findCompany }} {{/unless}}

      <!-- current events -->
      {{#unless isApplican}} {{> web/currentEvent }} {{/unless}}

      <!-- contents -->
      {{#unless isApplican}} {{> web/contents }} {{/unless}}
    </div>

    <!-- sparebox -->
    <div id="spare-boxes" class="{{#if isApplican}}app-spare-box{{/if}}">
      <!--generated by js-->
    </div>

    <!-- information -->
    <div id="notice" class="contents-box info-2-box">
      <article class="article-box">
        <header class="article-box-header">
          <h2 class="article-box-header-h2">
            <span class="article-box-header-h2-jp">お知らせ</span><br/>
            <span class="article-box-header-h2-eng">INFORMATION</span>
          </h2>
        </header>
        <ul class="js-notice-ul"></ul>
      </article>
    </div>
  {{/content}}

  {{#content "footer-scripts" mode="append"}}
    <script src="{{path}}js/pages/CL0020/index.js"></script>
    {{#if isApplican}}
    <script src="{{path}}js/pages/CL0020/_app.js"></script>
    {{else}}
    <script src="{{path}}js/pages/CL0020/_web.js"></script>
    {{/if}}
    <script>
      $(document).ready(function () {
        var currentPartner = window.location.href.split(/([0-9]{4})/g).slice(-1)[0].split('/')[1];
        var contractTermId = globalInfo('contract_term_id');

        if (_.isEmpty(currentPartner)) {
          $('#corporateSeminar-wrapper').hide();
        }
        if (contractTermId == 2) {
          $('title').text('ダイヤモンド就活ナビ2022：学生のための就職活動・採用・IS情報サイト');
        }
      });
    </script>
  {{/content}}
{{/extend}}
