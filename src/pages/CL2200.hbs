{{#extend "components/layout" title="イベント 詳細"}}
  {{#content "header-scripts" mode="append"}}
    <link rel="stylesheet" href="{{path}}css/swiper.css" type="text/css" media="all"/>
    <link rel="stylesheet" href="{{path}}css/event.css" type="text/css" media="all"/>
    <link rel="stylesheet" href="{{path}}css/login.css" type="text/css" media="all"/>
    <style>
      #float-btn-case-2 {
        margin-bottom: 50px;
      }

      .book-li {
        margin-top: 50px;
      }
      .btn-open-map {
        background-color: #266ba8;
        padding: 5px 7px;
        border: 0;
        outline: 0;
        color: white;
        margin-bottom: 20px;
      }
    </style>
  {{/content}}
  {{#content "main"}}
    <div class="contents-box">
      <!--  -->
      <article class="article-box">
        <div class="event-detail-info-box">
          <div data-api="event_prefecture" class="event-detail-info-loc"></div>
          <div data-api="event_datetime" class="event-detail-info-dateday">
          </div>
        </div>

        <!--  -->
        <div id="eventDetailBox" class="event-detail-box">
          <h3 data-api="event_title" class="event-detail-h3"></h3>
          <figure class="event-detail-fig">
            <img data-api="event_image" src="" class="event-detail-img" alt=""/>
          </figure>
          <!-- <div class="event-detail-contents">
            こちらはCMSで編集可能なエリアです。説明文がここに入ります。この文章はダミーです。お読みにならないでください。説明文がここに入ります。この文章はダミーです。お読みにならないでください。
          </div> -->
          <dl class="event-detail">
            <dt>概要</dt>
            <dd class="line-break" data-api="event_summary"></dd>
          </dl>
          <dl id="asura-join-company" class="event-detail event-detail-companies">
            <dt>出展企業</dt>
            <dd data-api="event_company_list"><br></dd>
          </dl>
          <dl class="event-detail">
            <dt>主催</dt>
            <dd data-api="event_hostname"></dd>
          </dl>
          <!--<dl class="event-detail">-->
          <!--<dt>場所.会場名</dt>-->
          <!--<dd></dd>-->
          <!--</dl>-->
          <!--<dl class="event-detail">-->
          <!--<dt>住所</dt>-->
          <!--<dd data-api="event_address"></dd>-->
          <!--</dl>-->
        </div>

        <!-- googlemap -->
        <div class="map-box">
          <div data-api="event_place" class="map-venue-name"></div>
          <div class="map-venue-address">住所：<span data-api="event_address"></span></div>
          <!--dnavi ggmap-->
          <div id="googlemap" class="map-iframe"></div>
          <!--/dnavi ggmap-->

          <!--&lt;!&ndash;asura ggmap&ndash;&gt;-->
          <!--<iframe style="display: none" id="googlemap-asura"-->
          <!--src=""-->
          <!--frameborder="0" class="map-iframe" allowfullscreen></iframe>-->
          <!--&lt;!&ndash;/asura ggmap&ndash;&gt;-->

          <!--<iframe-->
          <!--src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3279.9942491906136!2d137.73382285102508!3d34.70532499038186!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x601ade77313e50a1%3A0x983dee4a8b04e07d!2z44CSNDMwLTA5Mjgg6Z2Z5bKh55yM5rWc5p2-5biC5Lit5Yy65p2_5bGL55S677yR77yR77yR4oiS77yR!5e0!3m2!1sja!2sjp!4v1562316992460!5m2!1sja!2sjp"-->
          <!--frameborder="0" class="map-iframe" allowfullscreen></iframe>-->
          {{#if isApplican}} <button class="btn-open-map">地図アプリで表示 ＞</button> {{/if}}

        </div>

        <div class="mgnt20">
          <!--child events-->
          <h3 class="events-section-h3 js-children-event-title" style="display: none">講演</h3>
          <ul class="event-ul js-event-ul" style="display: none">
            <!--child event-->
            <li class="event-ul-li upper-row">
              <div class="event-info-box">
                <div data-api="eventchild_prefecture" class="event-loc"></div>
                <div data-api="eventchild_datetime" class="event-dateday"></div>
                <div data-api="eventchild_title" class="event-ttl"></div>
              </div>
              <div class="event-btn-box">
                <a href="{{link.eventDetail}}" class="btn-small btn-blue">詳細・予約</a>
              </div>
            </li>
          </ul>
        </div>

        <!-- float button-->
        <div id="reserveBtnOuterBox" class="reserve-box-outer">
          <div id="reserveBtnBox" class="reserve-btn-box">
            <!--case 2 slider-->
            <div id="float-btn-case-2" class="swiper-container hidden">
              <ul class="swiper-wrapper js-card-ul">
                <!--generated by js-->
              </ul>
              <!-- <div class="swiper-pagination-mainvis"></div> -->
              <div class="swiper-button-prev swiper-button-mainvis"></div>
              <div class="swiper-button-next swiper-button-mainvis"></div>
            </div>
            <!--end case 2-->
          </div>
        </div>
      </article>
    </div>
    <!--modal-->
    <div id="modalReservation" class="modal-outer">
      <div class="modal">
        <header class="modal-header">
          <h2 class="modal-header-h2"><span class="modal-header-h2-jp">予約日程選択</span></h2>
          <a href="javascript:void(0);" class="btn-modal-close" onclick="hideModal('modalReservation');"></a>
        </header>
        <div class="modal-body">
          <form>
            <ul id="js-reserve-ul" class="reserve-ul">
              <!--reservation time render by js-->
            </ul>
            <div class="mgnt30-50">
              <div class="reserve-btn-note">ご予約のイベントをチェックし、予約へお進みください。</div>
              <a id="js-book-event" href="javascript:void(0);" class="btn-default btn-white btn-disabled w100-50prc">予約</a>
            </div>
          </form>
        </div><!-- /modal-body -->
      </div>
    </div><!-- /modal-outer -->
  {{/content}}
  {{#content "footer-scripts" mode="append"}}
    <script src="{{path}}js/vendor/gmaps.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBfM9pDjqNI4vYarFRvyeeXGmJ-O59FHgc"></script>
    <script src="{{path}}js/shared/CL2200_common.js"></script>
    <script src="{{path}}js/pages/CL2200.js"></script>
  {{/content}}
{{/extend}}
