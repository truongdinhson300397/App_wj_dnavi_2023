<article id="find-company" class="article-box">
  <div class="drop-shadow-box">
    <header class="article-box-header">
      <h2 class="article-box-header-h2">
        <span class="article-box-header-h2-jp">企業をさがす</span><br/>
        <span class="article-box-header-h2-eng">SEARCH</span>
      </h2>
    </header>
    <div class="search-input-box clearfix">
      <input type="text" class="input-text search-btn-s-counterpart js-keyword-input" placeholder="企業名"/>
      <a href="javascript:void(0);" class="btn-default search-btn-s btn-blue js-btn-search-keyword">検索</a>
    </div>
    <div class="justify-content-start search-select-box-outer">
      <div class="search-select-box js-industry-div">
        <select data-api="industries" class="search-select js-industry-select">
        </select>
      </div>
      <div class="search-select-box js-job-category-div">
        <select data-api="job-categories" class="search-select js-category-select">
        </select>
      </div>

      <!--display when: not selected partner-->
      <div class="search-select-box hidden js-prefecture-div">
        <select data-api="prefectures" class="search-select js-prefecture-select">
        </select>
      </div>
      <!--display when: selected partner-->
      <div class="search-select-box hidden js-employee-size-div">
        <select data-api="employee-size" class="search-select js-employee-size-select">
          <!--generated by js-->
        </select>
      </div>
    </div>
    <div class="js-btn-group">
      <a href="javascript:void(0);" class="btn-default btn-blue w100-50prc js-btn-search-full">上記の条件で検索</a>
      <a href="{{link.companySearch}}" class="btn-default btn-green w100-50prc mgnt20-30 js-btn-search-detail-1">より詳しく探す</a>

      <!--show when selected partner-->
      <a href="{{link.companyList}}" class="btn-default btn-blue hidden w100-50prc mgnt20-30 js-btn-search-prefectures">本社所在地一発検索</a>
      <a href="{{link.companySearch}}" class="btn-default btn-green hidden w100-50prc mgnt20-30 js-btn-search-detail-2">勤務地一発検索</a>
    </div>
  </div>
</article>
